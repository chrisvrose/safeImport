  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**", "cache/**", "candidates/**"],
      "sourceMaps": false,

      "program": "${workspaceFolder}/src/index.mjs",
      "args": []
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test",
      "skipFiles": ["<node_internals>/**", "cache/**", "candidates/**"],
      "sourceMaps": false,
      // run mocha test
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "mocha"
      ],
      "args": ["test"]
    }
  ]
}
